<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Evo8fx\M2ddlogger\Model\Api\Record\DatadogHttpInterface" type="Evo8fx\M2ddlogger\Model\Datadog\Record\HttpClient"/>
    <type name="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">main</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Magento\Framework\Logger\Handler\System</item>
                <item name="debug" xsi:type="object">Magento\Framework\Logger\Handler\Debug</item>
                <item name="syslog" xsi:type="object">Magento\Framework\Logger\Handler\Syslog</item>
                <item name="datadog_http" xsi:type="object">Evo8fx\M2ddlogger\Logger\Handler\System\DatadogHttp</item>
                <item name="datadog_file" xsi:type="object">Evo8fx\M2ddlogger\Logger\Handler\System\DatadogFile</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Webapi\Controller\Rest">
        <plugin name="rest-api-log" type="Evo8fx\M2ddlogger\Plugin\RestApiLog"/>
    </type>
    <type name="Magento\Framework\Webapi\Rest\Response">
        <plugin name="rest-api-log" type="Evo8fx\M2ddlogger\Plugin\RestApiLog" />
    </type>
    <type name="Evo8fx\M2ddlogger\Model\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Evo8fx\M2ddlogger\Model\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">Evo8fx_M2ddlogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Evo8fx\M2ddlogger\Model\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

</config>
